<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= day%>
        </h1>

    </div>

    <div class="box">
        <% for(var i=0; i < newTask.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= newTask[i]%>
                </p>
            </div>

        <% } %>

        <form class="item" action= "/" method="post">
            <input type="text" name="newItem" placeholder="add task" autocomplete="off" required="true">
            <button type="submit" name= "list" value = <%= day%> >+</button>
        </form>
    </div>

<%- include("footer") -%>
